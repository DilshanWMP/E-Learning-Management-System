<Window x:Class="CodeDot.CourseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CodeDot"
        mc:Ignorable="d"
        Title="CourseWindow" Height="400" Width="500"
        WindowStartupLocation="CenterScreen"
        Background="#FFFAFAFA">

    <Grid>

        <Rectangle Fill="#FF2D3142" VerticalAlignment="Top" Height="60"/>

        <TextBlock Text="Add New Course" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   Foreground="White" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Top" 
                   Margin="0,10,0,0"/>

        <StackPanel VerticalAlignment="Center" 
                    HorizontalAlignment="Center" 
                    Width="350" 
                    Margin="0,40,0,0">

            <TextBlock Text="Course Name:" 
                       FontSize="16" 
                       Foreground="#FF2D3142" 
                       Margin="0,0,0,5"/>
            
            <TextBox x:Name="CourseNameTextBox" 
                     FontSize="16" 
                     Padding="10" 
                     Margin="0,0,0,15" 
                     BorderBrush="#FFCCCCCC" 
                     BorderThickness="1" 
                     Background="White"/>


            <TextBlock Text="Course Description:" 
                       FontSize="16" 
                       Foreground="#FF2D3142" 
                       Margin="0,0,0,5"/>
            
            <TextBox x:Name="CourseDescriptionTextBox"
                     FontSize="16" 
                     Padding="10" 
                     Margin="0,0,0,20" 
                     BorderBrush="#FFCCCCCC" 
                     BorderThickness="1" 
                     Background="White" 
                     Height="100" 
                     VerticalScrollBarVisibility="Auto"/>
            
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Save" 
                        FontSize="16" 
                        FontWeight="Bold" 
                        Padding="15,10" 
                        Background="#FF5CB85C" 
                        Foreground="White" 
                        BorderBrush="Transparent" 
                        Cursor="Hand"
                        Margin="0,0,10,0"
                        Click="Save_Course"/>
                
                <Button Content="Cancel" 
                        FontSize="16" 
                        FontWeight="Bold" 
                        Padding="15,10" 
                        Background="#FFD9534F" 
                        Foreground="White" 
                        BorderBrush="Transparent" 
                        Cursor="Hand"
                        Click="Cancel"
                        />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
