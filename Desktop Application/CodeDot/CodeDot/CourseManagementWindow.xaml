<Window x:Class="CodeDot.CourseManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CodeDot"
        mc:Ignorable="d"
        Title="CourseManagementWindow" Height="450" Width="800"
        Background="#FFFAFAFA">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="6*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <Rectangle Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Fill="#FF2D3142"/>
        
        <TextBlock Grid.Row="0" Grid.Column="2"
                   HorizontalAlignment="Center"
                   FontSize="25"
                   FontWeight="Bold"
                   Padding="5" Margin="0"
                   Foreground="White"
                   Text="Course Management System"/>
        
        <Image Grid.Row="0" Grid.Column="0" 
               HorizontalAlignment="Center" 
               Source="Assets/CodeDot-logo.png" Margin="10"/>

        <Rectangle Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Fill="#FFFAFAFA"/>
        
        <StackPanel Grid.Row="1" Grid.Column="0" VerticalAlignment="Center">
            <Button FontSize="15"
                    Padding="15" Margin="5"
                    Background="#FF4A90E2"
                    Foreground="White"
                    >Add Course</Button>

            <Button FontSize="15"
                    Padding="15" Margin="5"
                    Background="#FF4A90E2"
                    Foreground="White"
                    >Update Course</Button>

            <Button FontSize="15"
                    Padding="15" Margin="5"
                    Background="#FF4A90E2"
                    Foreground="White"
                    >Delete Course</Button>
        </StackPanel>

        <DataGrid Grid.Row="1" Grid.Column="1" 
                  AutoGenerateColumns="True"
                  Margin="10"
                  VerticalAlignment="Stretch"
                  HorizontalAlignment="Stretch"
                  BorderBrush="#FFDDDDDD"
                  />

    </Grid>
</Window>
